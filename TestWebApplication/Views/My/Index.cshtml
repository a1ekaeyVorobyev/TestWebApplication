
@{
    ViewBag.Title = "Одиночный";
    Layout = "~/Views/Layout/_LayoutPage.cshtml";
}


<div ng-app="helloWorldApp" ng-controller="HelloWorldCtrl">
    <div class="row center-block text-center">
        <div class="alert alert-info" role="alert">CRUD Student as single object</div>
    </div>
    <div class="row">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">First Name</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" ng-model="std.FIRST_NAME">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Last Name</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" ng-model="std.LAST_NAME">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Email</label>
                <div class="col-sm-4">
                    <input type="email" class="form-control" ng-model="std.EMAIL">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Address</label>
                <div class="col-sm-4">
                    <textarea class="form-control" ng-model="std.ADRESS"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Enroll Date</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" ng-model="std.ENROLMENT_DATE " placeholder="YYYY/MM/DD.">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Department</label>
                <div class="col-sm-4">
                    <select class="form-control" ng-options="item.value as item.name for item in departmentList" ng-model="std.DEPARTMENT_ID"></select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-4">
                    <button type="button" class="btn btn-primary" ng-click="Save(std)">Save</button>
                    <button type="button" class="btn btn-warning" ng-click="Update(std)">Update</button>
                    <button type="button" class="btn btn-default" ng-click="Cancel()">Cancel</button>
                </div>
            </div>
        </form>
    </div>
    <div class="row table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Почта</th>
                    <th>Адрес</th>
                    <th>Дата зачисления</th>
                    <th>Факультет</th>
                    <th colspan="2">Дествие</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in  studentList">
                    <td>{{item.LAST_NAME}}</td>
                    <td>{{item.FIRST_NAME}}</td>
                    <td>{{item.EMAIL}}</td>
                    <td>{{item.ADRESS}}</td>
                    <td>{{item.ENROLMENT_DATE}}</td>
                    <td>{{depatmetn_name(item.DEPARTMENT_ID)}}</td>
                    <td class="text-center"><i class="fa  fa-edit fa-2x" style="color: orange; cursor: pointer" ng-click="Edit(item)"></i></td>
                    <td class="text-center"><i class="fa fa-trash fa-2x" style="color: red; cursor: pointer" ng-click="Delete(item)"></i></td>

                </tr>
            </tbody>
        </table>
    </div>

    <h1>
        {{message}}<br />
    </h1>

</div>
<script src="~/Scripts/MyScript/test.js"></script>
