
@{
    ViewBag.Title = "Список";
    Layout = "~/Views/Layout/_LayoutPage.cshtml";
}

<div ng-app="myApp" ng-controller="myCtrl">
    <div class="row center-block text-center">
        <div class="alert alert-info" role="alert">Save Student as object list</div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-3 control-label">First Name</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" ng-model="std.FIRST_NAME">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Last Name</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" ng-model="std.LAST_NAME">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Email</label>
                    <div class="col-sm-8">
                        <input type="email" class="form-control" ng-model="std.EMAIL">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Address</label>
                    <div class="col-sm-8">
                        <textarea class="form-control" ng-model="std.ADRESS"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Enroll Date</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" ng-model="std.ENROLMENT_DATE" placeholder="YYYY/MM/DD">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Department</label>
                    <div class="col-sm-8">
                        <select class="form-control" ng-options="item.value as item.name for item in departmentList" ng-model="std.DEPARTMENT_ID"></select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-8">
                        <button type="button" class="btn btn-success" ng-click="AddStudent(std)">Add</button>
                        <button type="button" class="btn btn-warning" ng-click="Update(std)">Update</button>
                        <button type="button" class="btn btn-default" ng-click="Cancel()">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-7 table-responsive">
            <div class="row">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Имя</th>
                            <th>Фамилия</th>
                            <th>Почта</th>
                            <th>Адрес</th>
                            <th>Дата зачисления</th>
                            <th>Факультет</th>
                            <th>Удалить</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in studentList1">
                            <td>{{item.FIRST_NAME}}</td>
                            <td>{{item.LAST_NAME}}</td>
                            <td>{{item.EMAIL}}</td>
                            <td>{{item.ADRESS}}</td>
                            <td>{{item.ENROLMENT_DATE}}</td>
                            <td>{{depatmetn_name(item.DEPARTMENT_ID)}}</td>
                            <td class="text-center"><i class="fa fa-trash fa-2x" style="color: red; cursor: pointer" ng-click="DeleteStudent(item)"></i></td>

                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="form-group">
                    <div>
                        <button type="button" class="btn btn-info" ng-click="SaveAsXml(studentList1)">Save Student List as XML</button>
                        <button type="button" class="btn btn-info" ng-click="SaveAsTable(studentList1)">Save Student List as Data Table</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Почта</th>
                    <th>Адрес</th>
                    <th>Дата зачисления</th>
                    <th>Факультет</th>
                    <th colspan="2">Дествие</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in studentList">
                    <td>{{item.FIRST_NAME}}</td>
                    <td>{{item.LAST_NAME}}</td>
                    <td>{{item.EMAIL}}</td>
                    <td>{{item.ADRESS}}</td>
                    <td>{{item.ENROLMENT_DATE}}</td>
                    <td>{{depatmetn_name(item.DEPARTMENT_ID)}}</td>
                    <td class="text-center"><i class="fa  fa-edit fa-2x" style="color: orange; cursor: pointer" ng-click="Edit(item)"></i></td>
                    <td class="text-center"><i class="fa fa-trash fa-2x" style="color: red; cursor: pointer" ng-click="Delete(item)"></i></td>

                </tr>
            </tbody>
        </table>
    </div>
</div>
<script src="~/Scripts/MyScript/listObject.js"></script>

